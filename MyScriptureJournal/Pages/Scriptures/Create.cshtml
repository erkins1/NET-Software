            <div class="form-group">
                <label asp-for="Scriptures.verse" class="control-label"></label>
                <input asp-for="Scriptures.verse" class="form-control" />
                <span asp-validation-for="Scriptures.verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scriptures.notes" class="control-label"></label>
                <input asp-for="Scriptures.notes" class="form-control" />
