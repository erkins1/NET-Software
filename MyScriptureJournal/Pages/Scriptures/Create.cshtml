}

<h1>Create</h1>

<h4>Scriptures</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Scriptures.bookName" class="control-label"></label>
